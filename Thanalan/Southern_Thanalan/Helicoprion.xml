					<PatienceTug moochLevel="0" TugType="Medium" />
					<PatienceTug moochLevel="1" TugType="Heavy" />
				</PatienceTugs>
				<Keepers>
					<Keeper name="Helicoprion" />
				</Keepers>
				<FishSpots>
					<FishSpot XYZ="-441.4117, -0.9107453, 742.5688" Heading="4.968235" Sit="True" />
					<FishSpot XYZ="-442.3548, -0.9186811, 725.9896" Heading="4.513752" Sit="True" />
					<FishSpot XYZ="-445.7262, -1.34148, 700.6635" Heading="4.254045" Sit="True" />
				</FishSpots>
