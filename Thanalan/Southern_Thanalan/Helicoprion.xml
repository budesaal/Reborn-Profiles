			<If condition="not IsOnSubMap(257)">
				<LisbethTravel Area="Southern Thanalan" XYZ="-429.0695, -0.4089584, 736.3172"/>
			</If>
			<If Condition="not ClassName == ClassJobType.Fisher">
				<ChangeClass Job="Fisher" />
			</If>
			<While Condition="IsTimeBetween(7,8)" >
				<WaitTimer WaitTime="30" />
			</While>
			<ExFish Bait="Sand Leech" Condition="HasAtLeast(2600,1) and not HasAtLeast(8768,1) and IsTimeBetween(8,20) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(146, 'Heat Waves') and ExBuddy.Helpers.SkywatcherPlugin.PredictWeatherInZone(146, TimeSpan.FromHours(-8), 'Clouds', 'Fog')"
