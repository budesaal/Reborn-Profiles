<Profile>
  <Name>Magic Carpet</Name>
  <BehaviorDirectory></BehaviorDirectory>
  <Order>
  
	<If condition="not HasAtLeast(7931,1)">
		<Log Message="Start Fishing: Magic Carpet..." />
		<If condition="not HasAtLeast(2600,50)">
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':2600,'Amount':50,'Enabled':true,'Type':'Purchase'}]"/>
		</If>
		<If condition="not IsOnSubMap(257)">
			<LisbethTravel Area="Southern Thanalan" XYZ="-429.0695, -0.4089584, 736.3172"/>
		</If>
		<If Condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While Condition="not IsTimeBetween(9,16)" >
			<WaitTimer WaitTime="30" />
		</While>
		<ExFish Bait="Sand Leech" Condition="not HasAtLeast(7931,1) and IsTimeBetween(9,16) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(146, 'Heat Waves')"
				MinFish="10" MaxFish="15" ShuffleFishSpots="True" SitRate=".69" ThaliaksFavor="True"
				Mooch="2" Patience="Patience" MinimumGPPatience="500" ForceCordial="True" CordialType="HiCordial">
			<PatienceTugs>
				<PatienceTug moochLevel="0" TugType="Medium" />
				<PatienceTug moochLevel="1" TugType="Heavy" />
			</PatienceTugs>
			<Keepers>
				<Keeper name="Magic Carpet" />
			</Keepers>
			<FishSpots>
				<FishSpot XYZ="-447.4945, -1.033843, 708.514" Heading="4,681952" Sit="True"/>
			</FishSpots>
		</ExFish>	
	</If>
	<LLoadProfile Path="../../Start.xml"/>
	
  </Order>
  <GrindAreas>
  </GrindAreas>
  <CodeChunks>
  </CodeChunks>
</Profile>