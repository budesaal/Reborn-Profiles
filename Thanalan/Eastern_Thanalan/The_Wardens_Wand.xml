				<FishSpots>
					<FishSpot XYZ="246.3821, -3.596932, 52.58365" Heading="2.090189" Sit="True" />
					<FishSpot XYZ="263.5947, -2.646575, 37.97836" Heading="6.040217" Sit="True" />
					<FishSpot XYZ="209.853, -7.265845, 58.57347" Heading="4.702001" Sit="True" />
