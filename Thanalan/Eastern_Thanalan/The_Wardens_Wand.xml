			<While Condition="not IsTimeBetween(17,20)" >
				<WaitTimer WaitTime="30" />
			</While>
			<ExFish Bait="Honey Worm" Condition="not HasAtLeast(7918,1) and IsTimeBetween(17,20) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(145, 'Clear Skies')"
