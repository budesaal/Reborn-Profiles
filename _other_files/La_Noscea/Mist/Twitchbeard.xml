]>
<Profile>
	<Name>Twitchbeard</Name>
	<BehaviorDirectory />
	<Order>
		<Log Message="Starting Fishing: Twitchbeard..." />
		<If condition="not HasAtLeast(2596,50)">
			<!--Spoon Worm-->
			<Lisbeth IgnoreHome="True" Json="[{'Group':1,'Item':TEMP,'Amount':50,'Enabled':true,'Type':'Purchase'}]" />
		</If>
		<If condition="not IsOnSubMap(1203)">
			<LisbethTravel Area="Limsa Lominsa (Lower Decks)" XYZ="-81.17178, 18.864, -4.033834" />
		</If>
		<If condition="not ClassName == ClassJobType.Fisher">
			<ChangeClass Job="Fisher" />
		</If>
		<While condition="IsTimeBetween(3,4)">
			<WaitTimer WaitTime="30" />
		</While>
		<While condition="not HasAtLeast(7917,&Twitchbeard;) and HasAtLeast(2596,1) and IsTimeBetween(4,6) and ExBuddy.Helpers.SkywatcherPlugin.IsWeatherInZone(339, 'Clear Skies', 'Fair Skies')">
